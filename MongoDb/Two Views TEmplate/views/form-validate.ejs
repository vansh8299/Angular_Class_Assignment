<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="UTF-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Form Validate</title>
    <link rel="stylesheet" href="/formstyle.css" />
  </head>

  <body>
    <h2
      style="
        display: flex;
        justify-content: center;
        align-items: center;
        padding-bottom: 20px;
      "
    >
      Validation Form:
    </h2>
    <form
      action="/submit"
      method="post"
      class="form"
      enctype="multipart/form-data"
    >
      <label for="name">Name:</label>

      <input
        style="padding-right: 15px"
        type="text"
        id="name"
        name="name"
        required
      />

      <label style="padding-left: 15px" for="email">Email:</label>

      <input type="email" id="email" name="email" required />

      <label style="padding-left: 15px" for="image">Image:</label>

      <input
        type="file"
        id="image"
        name="image"
        accept="image/*"
        required
      /><br />

      <button type="submit">Submit</button>
    </form>

    <% if(errors){%>

    <h3 style="color: red">Error(s):</h3>

    <ul>
      <% errors.forEach(error=>{%>

      <li
        style="
          display: flex;
          justify-content: center;
          align-items: center;
          padding: 20px;
        "
      >
        <%= error.msg %>
      </li>

      <%})%>
    </ul>

    <%}%>
  </body>
</html>
