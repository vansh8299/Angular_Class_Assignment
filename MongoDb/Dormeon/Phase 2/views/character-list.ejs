<div class="container">
  <h1>characters List</h1>

  <a href="/characters/new" class="add-user-btn">Add character</a>

  <table>
    <tr>
      <th>Name</th>

      <th>Age</th>

      <th>talent</th>

      <th class="actions">Actions</th>
    </tr>
    <% characters.forEach(ch=>{%>

    <tr>
      <td><%= ch.name %></td>

      <td><%= ch.age %></td>

      <td><%= ch.talent %></td>

      <td class="actions">
        <a href="/characters/<%= ch.id %>/edit">Edit</a>

        <form action="/characters/<%= ch.id %>?_method=DELETE" method="post">
          <button type="submit" class="delete-btn">Delete</button>
        </form>
      </td>
    </tr>

    <%})%>
  </table>
</div>
