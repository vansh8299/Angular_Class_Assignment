<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <div class="container">
      <h1>User List</h1>

      <a href="/users/new" class="add-user-btn">Add user</a>

      <table>
        <tr>
          <th>Name</th>

          <th>Age</th>

          <th>Email</th>

          <th class="actions">Actions</th>
        </tr>

        <% users.forEach(user=>{%>

        <tr>
          <td><%= user.name %></td>

          <td><%= user.age %></td>

          <td><%= user.email %></td>

          <td class="actions">
            <a href="/users/<%= user.id %>/edit">Edit</a>

            <form action="/users/<%= user.id %>?_method=DELETE" method="post">
              <button type="submit" class="delete-btn">Delete</button>
            </form>
          </td>
        </tr>

        <%})%>
      </table>
    </div>
  </body>
</html>
